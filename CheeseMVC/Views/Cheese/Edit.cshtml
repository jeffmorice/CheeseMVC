@{
//Layout = null;
}

<h1>Edit Cheese @ViewBag.editCheese.Name (id = @ViewBag.editCheese.CheeseId)</h1>

<form method="post">
    Name
    <br />
    <input name="name" type="text" value="@ViewBag.editCheese.Name" />
    <br />
    Description
    <br />
    <input name="description" type="text" value="@ViewBag.editCheese.Description"/>
    <br />
    <input name="id" type="hidden" value="ViewBag.editCheese.CheeseId" />
    <input type="submit" value="Edit" />
</form>