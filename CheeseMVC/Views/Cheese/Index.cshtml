@if (Model.Count == 0)
{
    <p>No Cheeses yet!</p>
}
@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th></th>
        </tr>
        @foreach (Cheese cheese in Model)
        {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Type</td>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
        </tr>
        }
    </table>
}